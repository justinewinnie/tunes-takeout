<!DOCTYPE html>
<html>
<head>
  <title>TunesTakeout</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>TunesTakeout</h1>
  </header>
  <% if current_user %>
    <h2>Welcome, <%=current_user.name%></h2>
    <img src="<%=current_user.image%>" alt="Smiley face">
   	<%= link_to "Logout", logout_path, method: "delete" %>
   <% else %>
     <%= link_to "Login", "/auth/spotify" %>
   <% end %>

<%= yield %>

</body>
</html>
