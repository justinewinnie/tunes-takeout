<!DOCTYPE html>
<html>
<head>
  <title>TunesTakeout</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>TunesTakeout</h1>
  </header>
  <% if current_user %>
    <h2>Welcome, <%=current_user.name%></h2>
    <img src="<%=current_user.image%>" alt="Smiley face">
   	<%= link_to "Logout", logout_path, method: "delete" %>
    <h2>Search</h2>
      <%#= form_tag search_path do %>
      <%= form_tag(controller: "suggestions", action: "search", method: "post") %>
        <%= label_tag :keyword %>
        <%= text_field_tag :keyword %>
        <%binding.pry%>
        <%= submit_tag("Search") %>
      <% end %>
   <% else %>
     <%= link_to "Login", "/auth/spotify" %>
     <%#= link_to "View Favorites", ""%>
   <% end %>

<%= yield %>

</body>
</html>
